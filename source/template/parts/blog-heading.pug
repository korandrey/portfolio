section.section.blog
    .parallax
        .hero___bg

            .parallax__layer
                #trailer.is_overlay
                    video#video(width='100%', height='auto', autoplay='autoplay', loop='loop', preload='auto')
                        source(src='assets/img/night.mp4')
                        source(src='book.webm', type='video/webm')
            .parallax__layer
                #mountains-blog.is_overlay
                    .parallax__layer(style='background-image: url("assets/img/gory.png");no-repeat center center fixed;background-size: cover;')


    ul.socials.socials__hero
        each item in ['vk', 'github', 'in']
            li.socials__item
                a(href="https://vk.com/id314617933").socials__link
                    svg.socials__icon
                        use(xlink:href=`assets/img/sprite/sprite.svg#${item}`)

    nav.navigation.navigation__hero
        span.navigation__hero-fake-line
    a(href="").hamburger
    a(href="").arrow__down_hero
        img(src="assets/img/icons/arrow_down.svg" alt="" id="strelka").arrow__icon
    .hero__title
        img(src="assets/img/stars.png", alt="").section-title
        .user.hero__user-block
            .user__photo
                img(src="assets/img/user-photo-about.png" alt="").user__photo-avatar
            .blog-title Блог
            .user__desc Статьи, которые я написал